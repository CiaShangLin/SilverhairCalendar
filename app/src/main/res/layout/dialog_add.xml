<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
            android:text="事件"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="24sp" android:textColor="@android:color/black"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="顏色"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="24sp"
            android:textColor="@android:color/black" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="時間"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="24sp" android:textColor="@android:color/black"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
            android:text="名字"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="24sp" android:textColor="@android:color/black"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="吃藥"
            android:ems="10"
            android:id="@+id/eventEt"
            app:layout_constraintTop_toTopOf="@+id/textView" app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="@+id/textView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/timeEt"
            app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/textView2" app:layout_constraintBottom_toBottomOf="@+id/textView2"
            android:text="21:00~21:30"/>
    <Button
            android:text="儲存"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addBt" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <Spinner
            android:layout_width="201dp"
            android:layout_height="37dp"
            android:id="@+id/colorSp"
            app:layout_constraintTop_toTopOf="@+id/textView3" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="@+id/textView3"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/nameEt"
            app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/textView4" app:layout_constraintBottom_toBottomOf="@+id/textView4"/>
</androidx.constraintlayout.widget.ConstraintLayout>
